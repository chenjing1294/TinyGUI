<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Style x:Key="CustomListBoxItemControlTemplate" TargetType="{x:Type ListBoxItem}">
    <Setter Property="SnapsToDevicePixels" Value="True" />
    <Setter Property="FontFamily" Value="{StaticResource JetBrainsMono}" />
    <Setter Property="FontSize" Value="12" />

    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type ListBoxItem}">
          <Border Margin="5 2.5" SnapsToDevicePixels="True">
            <ContentPresenter SnapsToDevicePixels="True" VerticalAlignment="Stretch" />
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>